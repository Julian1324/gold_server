{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["./build"]
}